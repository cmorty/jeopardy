/* Make Window black */
QWidget{
    background-color: black;
}



QPushButton, QLabel {
    background-color: blue;
    color: yellow;
    border: 2px solid #000000;
    border-radius: 6px;
    padding: 8px;
}

/* Configure the base layout */
QPushButton {
    font: bold 14px;
}

QLabel {
  font: bold 30px;
  qproperty-alignment: AlignCenter; /* For Labels */
}


QLabel#answer{
    padding: 200px;
}
