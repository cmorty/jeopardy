/* Align names to center */
QLabel[isname="true"] {
    qproperty-alignment: AlignCenter; /* For Labels */
}

/* Align points to left */
QLabel[ispoints="true"] {
    qproperty-alignment: AlignLeft; /* For Labels */
}
