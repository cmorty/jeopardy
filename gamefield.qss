/* Make Window black */
QWidget{
    background-color: black;
}


/* Configure the base layout */
QPushButton, QLabel {
    background-color: blue;
    font: bold 40px;
    color: yellow;
    border: 2px solid #000000;
    border-radius: 6px;

}


/* Allign categories to center */
QLabel[iscategory="true"] {
    qproperty-alignment: AlignCenter; /* For Labels */
}


